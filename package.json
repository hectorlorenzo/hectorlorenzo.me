{
  "name": "hectorlorenzo.me",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "build-task:concat": "concat-cli -f public/stylesheets/src/styles.css -o public/stylesheets/dist/app.css",
    "build-task:autoprefixer": "postcss public/stylesheets/dist/app.css --config postcss.config.js --no-map -d public/stylesheets/dist",
    "sass:build": "npm-run-all -p build-task:*",
    "sass:watch": "chokidar 'public/stylesheets/src/*.css' -c 'npm run sass:build'",
    "dev": "npm-run-all -p sass:*"
  },
  "dependencies": {
    "autoprefixer": "^7.1.4",
    "body-parser": "~1.13.2",
    "chokidar": "^1.7.0",
    "chokidar-cli": "^1.2.0",
    "cookie-parser": "~1.3.5",
    "debug": "~2.2.0",
    "express": "~4.13.1",
    "hbs": "~3.1.0",
    "morgan": "~1.6.1",
    "node-sass-chokidar": "^0.0.3",
    "npm-run-all": "^4.1.1",
    "serve-favicon": "~2.3.0"
  },
  "devDependencies": {
    "concat-cli": "^4.0.0",
    "cssnano": "^3.10.0",
    "postcss-cli": "^4.1.1"
  }
}
